{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "semi": [
            2,
            "always"
        ],
        "camelcase": [
            1,
            {
                "properties": "always"
            }
        ],
        "one-var-declaration-per-line": [
            2,
            "always"
        ],
        "eqeqeq": [
            2,
            "smart"
        ],
        "comma-spacing": [
            "warn",
            {
                "before": false,
                "after": true
            }
        ],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false
            }
        ],
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1,
                "maxEOF": 1,
                "maxBOF": 0
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 200,
                "tabWidth": 2,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-console": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "lines-between-class-members": 0,
        "no-param-reassign": "off",
        "dot-notation": "off",
        "consistent-return": "off",
        "class-methods-use-this": "off",
        "arrow-spacing": [
            "warn",
            {
                "before": true,
                "after": true
            }
        ],
        "comma-style": "error",
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "handle-callback-err": "off",
        "max-statements-per-line": [
            "error",
            {
                "max": 2
            }
        ],
        "no-empty-function": "error",
        "no-trailing-spaces": "error",
        "no-var": "error",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "prefer-const": "off",
        "space-before-blocks": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "space-in-parens": "error",
        "space-infix-ops": "error",
        "space-unary-ops": "error",
        "spaced-comment": "error",
        "yoda": "error",
        "func-names": "off"
    }
}